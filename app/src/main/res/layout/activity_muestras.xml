<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/carviewusuarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagencarview"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:src="@drawable/avatar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewnombreConsultar"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="18dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViapellidoConsultar"
                android:text="Apellidos"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViatelefonoConsultar"
                android:text="Telefono"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVicedulaConsultar"
                android:text="Cedula"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textCorreoConsultar"
                android:text="Correo"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVicontraseñaConsultar"
                android:text="Contraseña"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVirolConsultar"
                android:text="Rol"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>