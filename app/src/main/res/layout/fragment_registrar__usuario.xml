<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Registrar_Usuario" >

    <TextView
        android:id="@+id/Actualizar_Usu"
        android:layout_width="383dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Registrar Usuario"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="397dp"
        android:layout_height="137dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="129dp"
        app:layout_constraintBottom_toTopOf="@+id/boton_agregar_usu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Actualizar_Usu"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombre_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView
                android:id="@+id/apellido_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido" />

            <TextView
                android:id="@+id/cedula_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cedula" />

            <TextView
                android:id="@+id/tel_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Nombre_usu"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Apellido_usu"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Documento_usu"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Telefono_usu"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/Correo_Usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Correo_Usu" />

            <TextView
                android:id="@+id/Contraseña_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Contraseña_usu" />

            <TextView
                android:id="@+id/Rol_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rol_usu" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/In_correo_usu"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/In_Contraseña_usu"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/In_rol_usu"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/boton_agregar_usu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="340dp"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>